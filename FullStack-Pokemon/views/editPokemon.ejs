<%- include("partials/header.ejs") %>

<form action="/updatePokemon/<%= pokemon._id %>" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= pokemon.name %>">
    <label for="height">Height:</label>
    <input type="text" id="height" name="height" value="<%= pokemon.height %>">
    <label for="photo">Photo URL:</label>
    <input type="text" id="photo" name="photo" value="<%= pokemon.photo %>">
    <input type="submit" value="Update Pokemon">
</form>

