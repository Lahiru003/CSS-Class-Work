<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Animals</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<%- include('../partials/_navbar.ejs') %>
<body>
    <div class="container mt-4">
        <h1>All Animals</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Zoo</th>
                    <th>Scientific Name</th>
                    <th>Common Name</th>
                    <th>Given Name</th>
                    <th>Gender</th>
                    <th>Date of Birth</th>
                    <th>Age</th>
                    <th>Is Transportable</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% animals.forEach(function(animal) { %>
                <tr>
                    <td><%= animal.Zoo %></td>
                    <td><%= animal.ScientificName %></td>
                    <td><%= animal.CommonName %></td>
                    <td><%= animal.GivenName %></td>
                    <td><%= animal.Gender %></td>
                    <td><%= animal.DateOfBirth ? new Date(animal.DateOfBirth).toLocaleDateString() : 'N/A' %></td>
                    <td><%= animal.Age %></td>
                    <td><%= animal.IsTransportable ? 'Yes' : 'No' %></td>
                    <td>
                        <a href="/animals/edit/<%= animal._id %>" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
